<div class="row">
  {{#each tutorials}}
  <div class="col-md-4">
    <div class="card border-danger mb-3" style="max-width: 20rem;">
      <div class="card-body">
        <h4 class="card-title d-flex justify-content-between align-items-center">
          {{ title }} <a href="/tutorials/edit/{{_id}}"><i class="fas fa-edit"></i></a>
        </h4>
        <p class="card-text">{{ url }}</p>
        <p class="card-text">{{ description }} </p>
        <!-- DELETE REQUEST -->
        <form action="/tutorials/delete/{{_id}}?_method=DELETE" method="POST">
          <input type="hidden" name="_method" value="DELETE">
          <button type="submit" class="btn btn-success btn-block btn-sm">Delete</button>
        </form>
      </div>
    </div>
  </div>
  {{else}}
  <div class="card mx-auto">
    <div class="card-body">
      <h1>Hello {{user.name}}</h1>
      <p clsss="lead">There are not Tutorials yet.</p>
      <a href="/tutorials/add" class="btn btn-success btn-block">Create One!</a>
    </div>
  </div>
  {{/each}}
</div>